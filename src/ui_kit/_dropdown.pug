mixin dropdown()
	.form--element__wrapper.dropdown
		.form--element
		i.material-icons expand_more
		.dropdown--menu.form--element(style="display: none")
			.dropdown--menu__row
				h3 спальни
				.counter
					.counter--button.minus -
					h3.counter--button.value 2
					.counter--button.plus +
			.dropdown--menu__row
				h3 кровати
				.counter
					.counter--button.minus -
					h3.counter--button.value 2
					.counter--button.plus +
			.dropdown--menu__row
				h3 ванные комнаты
				.counter
					.counter--button.minus -
					h3.counter--button.value 0
					.counter--button.plus +
mixin guestdropdown()
	.form--element__wrapper.dropdown.guest--dropdown
		.form--element
		i.material-icons expand_more
		.dropdown--menu.form--element(style="display: none")
			.dropdown--menu__row
				h3 взрослые
				.counter
					.counter--button.minus -
					h3.counter--button.value 0
					.counter--button.plus +
			.dropdown--menu__row
				h3 дети
				.counter
					.counter--button.minus -
					h3.counter--button.value 0
					.counter--button.plus +
			.dropdown--menu__row
				h3 младенцы
				.counter
					.counter--button.minus -
					h3.counter--button.value 0
					.counter--button.plus +
			.dropdown--menu__row
				h3.clear.cup очистить
				h3.apply.cup применить


			
