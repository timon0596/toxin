mixin advantage(name,descr,icon)
	.advantage
		i.material-icons= icon
		.advantage__info
			.advantage__name= name
			.advantage__descr= descr
mixin advantages()
	.advantage__wrapper
		+advantage('Комфорт','Шумопоглощающие стены','insert_emoticon')
		+advantage('Удобство','Окно в каждой из спален','location_city')
		+advantage('Уют','Номер оснащён камином','whatshot')