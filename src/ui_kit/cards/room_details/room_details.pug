mixin room_details()
	.block.block-room-details
		.block__row
			.block__inner-row
				.block__number
					!= "№ <h1> 888</h1> <h3>люкс</h3>" 
				.block__payment
					.block__cost 9 990₽
					=" в сутки"
		.block__row
			+datedropdown({names: ['прибытие','выезд']})
		.block__row
			+guestdropdown('гости')
		.block__row
			.tax-list
				.tax.tax__habitation
					.tax__text 9 990₽ х 4 суток
					| 39 960₽
				.tax.tax__services
					.tax__text Сбор за услуги: скидка 2 179₽
						.tax__info i
					| 0₽		
				.tax.tax__extra-services
					.tax__text Сбор за дополнительные услуги
						.tax__info i
					| 300₽
		.block__row
			.block__total
				h2 Итого
				.block__underline
				h2.block__sum 38 081₽
			+btn({text: 'забронировать',modifier: 'arrow'})
