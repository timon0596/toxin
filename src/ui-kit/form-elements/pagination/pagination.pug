mixin pagination()
  .pagination
    .pagination__list
      .pagination__item.pagination__item_current 1
      .pagination__item 2
      .pagination__item 3
      .pagination__item ...
      .pagination__item 15
      .pagination__item.pagination__item_next
        +icon({icon: 'arrow_forward', color: 'white'})
    .pagination__info 1 – 12 из 100+ вариантов аренды