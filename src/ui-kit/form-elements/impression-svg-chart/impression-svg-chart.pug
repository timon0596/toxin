mixin impression-svg-chart()
  svg.impression-svg-chart
    lineargradient#impression-svg-chart__gradient-1
      stop(offset='0%' stop-color='#FFE39C')
      stop(offset='100%' stop-color='#FFBA9C')
    lineargradient#impression-svg-chart__gradient-2
      stop(offset='0%' stop-color='#8BA4F9')
      stop(offset='100%' stop-color='#BC9CFF')
    lineargradient#impression-svg-chart__gradient-3
      stop(offset='0%' stop-color='#66D2EA')
      stop(offset='100%' stop-color='#6FCF97')
    circle.impression-svg-chart__circle-1(cx='50%' cy='50%' r='58')
    circle.impression-svg-chart__circle-2(cx='50%' cy='50%' r='58')
    circle.impression-svg-chart__circle-3(cx='50%' cy='50%' r='58')