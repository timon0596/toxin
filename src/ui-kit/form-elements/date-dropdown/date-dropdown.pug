mixin date-dropdown({names,isFilterDropDown})
  .date-dropdown.js-date-dropdown(class={'date-dropdown_filter': isFilterDropDown})
    .date-dropdown__datepicker-container.js-date-dropdown__datepicker-container
    each name in names
      .date-dropdown__display
        +text-field({
          text:name,
          placeholder:'дд.мм.гггг', 
          material_icons:'expand_more',
          modifier: !isFilterDropDown?'masked':null,
          disabled: isFilterDropDown
        })
