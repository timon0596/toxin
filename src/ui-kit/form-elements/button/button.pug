mixin button({text,modifier,color,ofHeader=false})
  .button.js-button(class={
    'button_with-arrow': modifier==='arrow',
    'button_with-border': modifier==='border',
    'button_with-no-bg': modifier==='no-bg',
    'button_of-header': ofHeader
    })
    .button__text(class={
      'button__text_purple': color==='purple',
      'button__text_grey': color==='grey',
    })= text
    if modifier==='arrow'
      .button__arrow
        +icon({icon:'arrow_forward',color: 'white'})
