mixin nav({signed})
  nav.nav
    a(href="/mock-address/change-me").nav__item О нас
    a(href="/mock-address/change-me").nav__item Услуги
      +icon()
    a(href="/mock-address/change-me").nav__item Вакансии
    a(href="/mock-address/change-me").nav__item Новости
    a(href="/mock-address/change-me").nav__item Соглашения
      +icon()
    a(href="/mock-address/change-me").nav__item(data-signed=`${!signed}`).nav__item_unsigned.js-nav__item_unsigned
      .nav__button
        .js-nav__sign-in-button
          +button({
            text: 'войти',
            type: 'with-border',
            color: 'purple',
            isLow: true
          })
    a(href="/mock-address/change-me").nav__item(data-signed=`${!signed}`).nav__item_unsigned.js-nav__item_unsigned
      .nav__button
        .js-nav__sign-up-button
          +button({
            text: 'зарегистрироваться',
            isLow: true
          })
    a(href="/mock-address/change-me").nav__item(data-signed=`${signed}`).js-nav__item_signed.nav__item_signed Юлий Цезарь