.search-block
	h1 Найдем номера под ваши пожелания
	.datepicker-wrapper
		.datepicker-inner
			.date-arrival
				h3 прибытие
				.date
					input( type='date')
					i.material-icons expand_more
			.date-depart
				h3 выезд
				.date
					input( type='date')
					i.material-icons expand_more
			.datepicker
				.nav
					i.material-icons.prev arrow_back
					.month
					i.material-icons.next arrow_forward
				.week
					each day in ['Пн','Вт','Ср','Чт','Пт','Сб','Вс']
						.day= day
				.calendar
				.submit.datepicker-submit
					.clean очистить
					.apply применить
					

	.dropdown-wrapper
		h3 гости
		+guest()
	.button-wrapper
		+arrowbutton("подобрать номер")

