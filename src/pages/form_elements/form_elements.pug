include ./../../ui_kit/ui_kit
- var user = {icon: 'img/users/user1.jpeg',name: 'Мурад Сарафанов',date: '5 дней назад',likes: 11,text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'}
- var richContent = [{name: 'Широкий коридор',description: 'Ширина коридоров в номере не менее 91 см.'},{name: 'Помощник для инвалидов',description: 'На 1 этаже вас встретит специалист  и проводит до номера.'}]
- var content = [{name: 'Можно курить'},{name: 'Можно с питомцами'},{name: 'Можно пригласить гостей<br>(до 10 человек)'}]
<!DOCTYPE html>
html(lang="en")
head
	meta(charset="UTF-8")
	title form elements
body
	a(href="index.html") home
	.form-elements__list
		.form-elements__item
			h3 text field
			+textfield({placeholder: 'Email'})
		.form-elements__item
			+datedropdown({names: ['date dropdown','date dropdown']})
		.form-elements__item
			+datedropdown({names:['filter date dropdown'],modifier: 'filter'})
		.form-elements__item
			h3 masked text field
			+textfield({placeholder:'дд.мм.гггг',modifier: 'masked'})
		.form-elements__item
			h3 subscription text field
			+textfield({placeholder:'Email', material_icons:'arrow_forward', modifier:'subscription'})
		.form-elements__item
			+dropdown('dropdown')
		.form-elements__item
			+guestdropdown('dropdown')
		.form-elements__item
			+checkbox-list('expandable checkboxlist')
		.form-elements__item
			+checkbox_buttons({h3:'Rich Checkbox Buttons',content: richContent,modifier: 'rich'})
		.form-elements__item
			+checkbox_buttons({h3: 'Checkbox Buttons',content})
		.form-elements__item
			h3 bullet list
			+bullet-list({list:['Нельзя с питомцами','Без вечеринок и мероприятий','Время прибытия — после 13:00, а выезд до 12:00']})
		.form-elements__item
			h3 radio buttons
			+radio()
		.form-elements__item
			h3 toggle
			+toggle()
		.form-elements__item
			h3 like button
			+like(12)
		.form-elements__item
			h3 rate buttons
			+rate(3)
		.form-elements__item
			h3 rate buttons
			+rate(4)
		.form-elements__item
			+slider('range slider')
		.form-elements__item
			h3 buttons
			.form-elements__group
				+btn({text:'click me'})
				+btn({text:'click me',modifier: 'border'})
				+btn({text:'click me',modifier: 'no-bg'})
				+btn({text:'click me',modifier: 'grey'})
				+btn({text:'перейти к оплате',modifier: 'arrow'})
		.form-elements__item
			.advantage__wrapper
				+advantage('Комфорт','Шумопоглощающие стены','insert_emoticon')
				+advantage('Удобство','Окно в каждой из спален','location_city')
		.form-elements__item
			+comment(user)
		.form-elements__item
			h3  pagination
			+pagination()
